                                                            <td>

                                                                <a class="nav-link text-dark" href="#" onclick="GenerateCsv(@dept.CodEnt);">@dept.Nombre</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </section>
        }
