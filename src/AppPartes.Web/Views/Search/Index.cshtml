            @foreach (var dept in Model.listResume)
            {
                <div class="table-wrapper">
                    <h4>@dept.User</h4>
                    <table class="alt">
                        @*<thead>
                                <tr>
                                    <td>@dept.User</td>
                                </tr>
                            </thead>*@
                        <tbody>
                            @*<tr>
                                    <td>Dias</td>
                                </tr>*@
                            <tr>
                                <td>Dias:</td>
                                @foreach (var t in dept.lDay)
                                {
                                    <td>@t</td>
                                }
                            </tr>
                            <tr>
                                <td>Horas:</td>
                                @foreach (var t in dept.dayStatus)
                                {
                                    <td style="background-color: @t.colour;">@t.hour</td>
