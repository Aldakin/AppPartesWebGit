                               value=" "
                               min="@(DateTime.Now.Year - 2)-01-01"
                               max="@(DateTime.Now.Year + 2)-12-31" required>
                    }
                </div>
                <div class="col-12">
                    <label for="start">Seleccione delegación:</label>

                    <select id="EntityWorker" name="strEntity">
